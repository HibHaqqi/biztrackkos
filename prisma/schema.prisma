// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "rhel-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(cuid())
  name      String
  phone     String
  nik       String   @unique
  entryDate DateTime @default(now())
  roomNumber String?
}

model Transaction {
  id           String    @id @default(cuid())
  type         String // "revenue" or "expense"
  amount       Float
  date         DateTime
  description  String
  category     String?
  roomNumber   String?
  customerName String?
}
